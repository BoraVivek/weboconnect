<main class="grow md:w-4/12 md:mx-auto md:mt-10">
    <section class="bg-cyan-800 p-5 m-5 rounded shadow-lg flex flex-col gap-5 items-center">
        <div class="section-header text-white flex flex-col items-center gap-2 w-full">
            <span class="text-3xl font-bold">Login</span>
            <span class="text-lg text-cyan-400">Let's explore the tech together</span>
        </div>
        <% if(flash.error.length > 0){ %>
            <div class="errors text-white bg-red-600 px-4 py-2">
                <%= flash.error %>
            </div>
        <% } %>
        <form action="/users/create-session" class="w-full section-content flex flex-col gap-5 inputGroup" method="post">
            <input type="email" name="email" id="email" placeholder="Enter your email..." class="input-field" required>
            <input type="password" name="password" id="password" placeholder="Enter your password..."
                class="input-field" required>
            <input type="submit" value="Login" class="bg-cyan-600 text-white px-5 py-2 w-32 self-center rounded cursor-pointer hover:bg-slate-800">
        </form>
    </section>
</main>